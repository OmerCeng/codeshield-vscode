{
  "name": "vs-codeshield",
  "displayName": "vs-CodeShield", 
  "description": "A VS Code extension that detects security vulnerabilities like SQL injection and exposed API keys, providing fix suggestions",
  "version": "0.0.11",
  "icon": "icon.png",
  "publisher": "vscodecodeshield",
  "license": "MIT",
  "homepage": "https://github.com/OmerCeng/codeshield-vscode.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/OmerCeng/codeshield-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/OmerCeng/codeshield-vscode.git/issues"
  },
  "keywords": [
    "security",
    "vulnerability",
    "sql-injection",
    "xss",
    "code-analysis",
    "linter",
    "security-scanner"
  ],
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeshield.scanCurrentFile",
        "title": "Scan Current File for Security Issues",
        "category": "CodeShield"
      },
      {
        "command": "codeshield.scanWorkspace",
        "title": "Scan Workspace for Security Issues",
        "category": "CodeShield"
      },
      {
        "command": "codeshield.explainVulnerability",
        "title": "Explain Security Vulnerability",
        "category": "CodeShield"
      },
      {
        "command": "codeshield.ignoreVulnerability",
        "title": "Ignore Security Vulnerability",
        "category": "CodeShield"
      },
      {
        "command": "codeshield.analyzeSelection",
        "title": "Analyze Selected Code for Security Issues",
        "category": "CodeShield"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeshield.scanCurrentFile",
          "group": "navigation"
        },
        {
          "command": "codeshield.analyzeSelection",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "codeshield.scanWorkspace",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CodeShield",
      "properties": {
        "codeshield.enableSqlInjectionDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable SQL injection vulnerability detection"
        },
        "codeshield.enableApiKeyDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable API key exposure detection"
        },
        "codeshield.enableAutoFix": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic fix suggestions"
        },
        "codeshield.notifications": {
          "type": "object",
          "default": {
            "showPopup": true,
            "minSeverity": "warning",
            "playSound": false
          },
          "description": "Notification rules for security vulnerabilities",
          "properties": {
            "vulnerabilityTypes": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "sql-injection",
                  "api-key",
                  "hardcoded-secret",
                  "unsafe-eval",
                  "path-traversal",
                  "xss",
                  "ssrf",
                  "nosql-injection",
                  "prototype-pollution",
                  "command-injection"
                ]
              },
              "description": "Only notify for these vulnerability types (empty = all types)"
            },
            "minSeverity": {
              "type": "string",
              "enum": ["info", "warning", "error"],
              "default": "warning",
              "description": "Minimum severity level to show notifications"
            },
            "showPopup": {
              "type": "boolean",
              "default": true,
              "description": "Show popup notifications for vulnerabilities"
            },
            "playSound": {
              "type": "boolean",
              "default": false,
              "description": "Flash status bar for critical vulnerabilities"
            },
            "customMessage": {
              "type": "string",
              "description": "Custom notification message template (use {type} and {message} placeholders)"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo 'No tests specified yet'"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}